<%= form_tag({:action => :create, :class => 'form'}, multipart: true) do %>

  <div class="form-group">
    <%= label_tag :file %>
    <%= file_field_tag(:file) %>
  </div>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field(:upload, :name, :class => "form-control") %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field(:upload, :description, :class => "form-control") %>
  </div>

  <%= submit_tag("Upload", :class => "btn btn-default") %>
<% end %>