
<div class="index-header text-center">
  <form action="/uploads" >
    <div class="input-group">
      <input class="form-control" type="text" name="search" />
      <span class="input-group-btn">
        <button class="btn btn-default" value="submit">Search</button>
      </span>
    </div>
  </form>
  <% if @search && @search != "" %>
    <div class="seach-words">
      <h3>Search: <%= @search %><h3>
      <%= link_to 'Clear search', :uploads, { :class=>"btn btn-default" } %>
    </div>
  <% end %>
  <%= link_to 'Upload File', new_upload_path, { :class=>"btn btn-default upload-file" } %>

</div>
<div>
<table class="table main-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>File Type</th>
      <th>Date Uploaded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.name %></td>
        <td><%= upload.description %></td>
        <td><%= upload.file_extension %></td>
        <td><%= upload.uploadDate.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Download', "uploads/#{upload.id.to_s}/download", :target => "_blank" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

